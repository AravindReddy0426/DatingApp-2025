{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "C#: Launch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/API/bin/Debug/net9.0/API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/API",
            "stopAtEntry": false
        },
           {
                "name": "Angular: Serve Client",
                  "type": "node",
                  "request": "launch",
                  "program": "${workspaceFolder}/client/node_modules/@angular/cli/bin/ng",
                  "args": ["serve"],
                  "cwd": "${workspaceFolder}/client",
                  "console": "integratedTerminal",
                  "internalConsoleOptions": "neverOpen"
            },        
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
